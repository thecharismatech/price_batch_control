<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="price_change_rule_user" model="ir.rule">
            <field name="name">Price Change: User Access</field>
            <field name="model_id" ref="model_price_change"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>

        <record id="price_change_rule_manager" model="ir.rule">
            <field name="name">Price Change: Manager Access</field>
            <field name="model_id" ref="model_price_change"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        </record>
    </data>
</odoo>
