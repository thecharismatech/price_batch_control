<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_price_change_wizard_form" model="ir.ui.view">
        <field name="name">price.change.wizard.form</field>
        <field name="model">price.change.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="source"/>
                    <field name="source_document_id" invisible="source == 'manual'"/>
                    <field name="change_type"/>
                    <field name="change_value"/>
                    <field name="effective_date"/>
                    <field name="product_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_apply_changes" string="Apply Changes" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_price_change_wizard" model="ir.actions.act_window">
        <field name="name">Change Product Prices</field>
        <field name="res_model">price.change.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_product_template"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
