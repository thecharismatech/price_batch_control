<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_price_change_wizard_form" model="ir.ui.view">
        <field name="name">price.change.wizard.form</field>
        <field name="model">price.change.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="change_type"/>
                    <field name="change_value"/>
                    <field name="product_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Apply Changes" name="action_apply_changes" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
