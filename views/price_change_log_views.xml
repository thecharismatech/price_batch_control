<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_price_change_log_form" model="ir.ui.view">
        <field name="name">price.change.log.form</field>
        <field name="model">price.change.log</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_approve" 
                            string="Approve" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state not in ('draft', 'pending')"/>
                    <button name="action_reject" 
                            string="Reject" 
                            type="object"
                            invisible="state not in ('draft', 'pending')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="old_price"/>
                            <field name="new_price"/>
                        </group>
                        <group>
                            <field name="change_type"/>
                            <field name="change_value"/>
                            <field name="source"/>
                            <field name="date"/>
                            <field name="date_approved" invisible="state != 'approved'"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <chatter/>
                </div>
            </form>
        </field>
    </record>
</odoo>
    <record id="view_price_change_log_list" model="ir.ui.view">
        <field name="name">price.change.log.list</field>
        <field name="model">price.change.log</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" decoration-warning="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'">
                <field name="name"/>
                <field name="product_id"/>
                <field name="old_price"/>
                <field name="new_price"/>
                <field name="change_type"/>
                <field name="change_value"/>
                <field name="date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_price_change_log_search" model="ir.ui.view">
        <field name="name">price.change.log.search</field>
        <field name="model">price.change.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="product_id"/>
                <field name="user_id"/>
                <filter string="My Price Changes" name="my_changes" domain="[('user_id', '=', uid)]"/>
                <filter string="Pending Approval" name="pending" domain="[('state', '=', 'pending')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Product" name="group_by_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Source" name="group_by_source" context="{'group_by': 'source'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_price_change_log" model="ir.actions.act_window">
        <field name="name">Price Changes</field>
        <field name="res_model">price.change.log</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_price_change_log_search"/>
    </record>
</odoo>