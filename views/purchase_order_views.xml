<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_price_change" model="ir.ui.view">
        <field name="name">purchase.order.form.price.change</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="action_rfq_send" position="after">
                <button name="action_open_price_wizard" 
                        string="Change Prices" 
                        type="object" 
                        class="btn-primary"
                        invisible="state not in ('draft', 'sent')"
                        groups="purchase.group_purchase_user"/>
            </button>
            <xpath expr="//form" position="inside">
                <chatter/>
            </xpath>
        </field>
    </record>
</odoo>