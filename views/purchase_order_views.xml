<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_price_change" model="ir.ui.view">
        <field name="name">purchase.order.form.price.change</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="action_rfq_send" position="after">
                <button name="%(action_price_change_wizard)d" 
                        string="Change Prices" 
                        type="action" 
                        class="btn-primary"
                        context="{'default_product_ids': order_line.mapped('product_id.product_tmpl_id').ids}"/>
            </button>
        </field>
    </record>
</odoo>
