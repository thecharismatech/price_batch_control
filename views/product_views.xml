<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.price.control</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" name="action_view_price_changes" type="object" icon="fa-money">
                    <field string="Price Changes" name="price_change_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
