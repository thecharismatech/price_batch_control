<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_price_control" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.price.control</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_price_wizard" 
                        string="Update Prices" 
                        type="object" 
                        invisible="state not in ['done']"
                        groups="price_batch_control.group_price_control_user"/>
            </xpath>
        </field>
    </record>
</odoo>
