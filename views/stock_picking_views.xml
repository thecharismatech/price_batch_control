<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_price_change" model="ir.ui.view">
        <field name="name">stock.picking.form.price.change</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <button name="action_assign" position="after">
                <button name="%(action_price_change_wizard)d" 
                        string="Change Prices" 
                        type="action"
                        class="btn-primary" 
                        context="{'default_product_ids': move_ids_without_package.mapped('product_id.product_tmpl_id').ids}"/>
            </button>
        </field>
    </record>
</odoo>
